{% if app.user.addresses|length > 0 %}
    {% for address in app.user.addresses %}
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title pull-left" style="padding-top: 7.5px;">{{ address.name }}</h4>
                <div class="btn-group pull-right">
                    <a href="#" class="btn btn-default btn-sm" title="{{ 'Edit' | trans }}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="#" class="btn btn-danger btn-sm" title="{{ 'Remove' | trans }}">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </div>
            </div>

            <div class="panel-body">
                <address>
                    {{ address.line1 }}<br>
                    {{ address.line2 }}<br>
                    {{ address.postalCode }}<br>
                {% if address.city %}
                    {{ address.city.name }}, <abbr title="{{ address.city.state.name }}">{{ address.city.state.acronym }}</abbr>
                {% endif %}
                </address>
            </div>
        </div>
    {% endfor %}
{% else %}
    <p class="empty">{% trans %}There are no addresses.{%  endtrans %}</p>
{% endif %}