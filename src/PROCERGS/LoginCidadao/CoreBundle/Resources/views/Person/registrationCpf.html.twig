{% extends "PROCERGSLoginCidadaoCoreBundle::base.loggedIn.html.twig" %}

{% block body %}
<h1>{% trans %}We're almost done!{% endtrans %}</h1>
<p>{% trans %}Your account is created, but you must have a CPF.{% endtrans %}</p>
<p>{% trans %}Your CPF will give some realibility to your account.{% endtrans %}</p>

{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.cpf, 'CPF:' | trans) }}
        {{ form_errors(form.cpf) }}
        {{ form_widget(form.cpf) }}
    </div>

    
        <h2>{% trans %}If you want to reinforce you CPF you can check with NFg{% endtrans %}</h2>
        <p>{% trans %}You need to put you password of your account of NFg .{% endtrans %}</p>

        <div class="form-group">
            {{ form_label(form.nfgPassword.first, 'Type in your NFg password here:' | trans) }}
            {{ form_errors(form.nfgPassword.first) }}
            {{ form_widget(form.nfgPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nfgPassword.second, 'And then confirm it here:' | trans) }}
            {{ form_errors(form.nfgPassword.second) }}
            {{ form_widget(form.nfgPassword.second) }}
        </div>


    <div class="form-group">
        {{ form_widget(form.save, { 'label': 'Save' | trans, 'attr': { 'class': 'btn btn-success' } }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
