{% extends "PROCERGSLoginCidadaoCoreBundle::base.popup.html.twig" %}

{% block content %}
    <div id="forgot-password-box">
        <h3 class="title">Login Cidadão</h3>
        
        {% trans_default_domain 'FOSUserBundle' %}
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="form-content">
                <h3>Recuperar Senha</h3>
                <p>Informe seu nome de usuário ou email</p>
                
                {% if invalid_username is defined %}
                    <p class="bg-danger validate">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                {% endif %}

                <div class="form-group">
                    <input class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" type="text" id="username" name="username" required="required" />
                </div>
                
                <div class="form-group">
                    <input class='btn btn-success' type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                </div>
            </div>
        </form>
    </div>
{% endblock %}