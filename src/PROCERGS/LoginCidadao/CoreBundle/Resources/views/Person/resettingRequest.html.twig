{% extends 'PROCERGSLoginCidadaoCoreBundle::base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-xs-12 text-center header-shadows">
        <h1>{% trans %}Citizen's Login{% endtrans %}</h1>
        <h2 class="slogan hidden-xs">{% trans %}One account. All that the Government offers.{% endtrans %}</h2>
    </div>
</div>

<div class="row">
    <div class="general-content col-lg-12">
        {% trans_default_domain 'FOSUserBundle' %}

        <div class="col-md-12 title">
            <h3>Recuperar Senha</h3>
            <p>Informe seu nome de usu√°rio ou email</p>
        </div>

        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="user_resetting_request">
            <div class="form-content">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label invisible" for="username">{{ 'resetting.request.username'|trans }}</label>
                        <input class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" type="text" id="username" name="username" required="required" />
                        <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                        <div class="input-error">{% if invalid_username is defined %}{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username})}}{% endif %}</div>
                    </div>
                    <input class='btn btn-success' type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                    <a href="{{ path('fos_user_registration_register') }}" class='btn btn-default' />Cancelar<a/>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
    {% stylesheets 'bundles/procergslogincidadaocore/css/home/*.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}