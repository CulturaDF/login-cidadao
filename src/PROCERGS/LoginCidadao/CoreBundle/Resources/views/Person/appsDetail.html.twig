{% extends "PROCERGSLoginCidadaoCoreBundle::base.loggedIn.html.twig" %}

{% block content %}
<div id="app-detail" class="content clearfix">
     {# {{dump(client)}} #}
    <h3>{{ client.name }}</h3>

    <div class="content">

        <div class="desc row">
            <div class="col-sm-12 col-md-4">
                <img src="http://placehold.it/220x220">
            </div>

            <div class="col-sm-12 col-md-7 col-md-offset-1">
                <p>{{ client.description }}</p>
            </div>

        </div>

        <div class="msg">
            {% if (user.hasAuthorization(client)) %}
                <p class="text-center activated">{% trans %}This service is already active in your Citizen's Login account{%  endtrans %}</p>
                <button class="btn center-block">{% trans %}Deactivate this service{%  endtrans %}</button>
            {% else %}
                <p class="text-center">{% trans %}This service is not active in your Citizen's Login account{%  endtrans %}</p>
                <button class="btn btn-success center-block">{% trans %}Activate this service{%  endtrans %}</button>
            {% endif %}
        </div>

        <p style="margin-top:50px;">Este serviço utiliza os seguintes dados da sua conta do Login Cidadão</p>


        <ul class="permissions pull-left">
            {% for key, status in scopes %}
                <li class="{{ status ? 'allow' : 'deny' }}">
                    <span>{{ ('scope.' ~ key) | trans }}</span>
                    {{ status ? '<i class="glyphicon glyphicon-ok"></i>' : '<i class="glyphicon glyphicon-remove"></i>' }}
                </li>
            {% endfor %}
        </ul>

    </div>

</div>

{% endblock %}