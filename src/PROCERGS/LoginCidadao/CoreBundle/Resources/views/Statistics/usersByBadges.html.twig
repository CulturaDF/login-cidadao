{% extends "PROCERGSLoginCidadaoCoreBundle::base.loggedIn.html.twig" %}
{% block content %}
  <div id="statistics" class="content statistics-badges badges-list">

    <h1>{{ 'statistics.userByBadge'|trans }}</h1>

    {% for client, badges in data %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ client }}</h3>
        </div>
        <div class="panel-body">
          {% for badge, value in badges %}
            {% for key, item in value %}
              <div class="col-xs-12 col-sm-6 col-md-4 badge-box clearfix">
                <div class="about col">
                  <div class="badge-icon badge-{{ key }}"></div>
                  <div>{{ key }}</div>
                </div>
                <div class="count col">
                  {% if item is iterable %}
                    {% for k, num in item %}
                      <div class="list">{{ k }}: <strong>{{ num }}</strong></div>
                    {% endfor %}
                  {% else %}
                      {{ item }}
                  {% endif %}
                </div>
              </div>

            {% endfor %}
          {% endfor %}
        </div>
      </div>
    {% endfor %}

  </div>
{% endblock %}