{% extends "PROCERGSLoginCidadaoCoreBundle::grid_layout.html.twig" %}

{% block grid_header_data %}
<div class="col-md-3">{{ 'cpf'|trans }}</div>
<div class="col-md-2">{{ 'username'|trans }}</div>
<div class="col-md-2">{{ 'email'|trans }}</div>
<div class="col-md-4">{{ 'name'|trans }}</div>
{% endblock grid_header_data %}

{% block grid_row_action %}
<div class="col-md-1 action-column-grid">
    <div class="btn-group btn-group-justified">
        <div class="btn-group">
            <button type="button" class="btn btn-info ac-search-select" id="{{ grid.getId }}-row-{{ row.id }}"  data-row="{{ {'id':row.id, 'fullNameOrUsername': row.fullNameOrUsername}|json_encode }}">
                <span class="glyphicon glyphicon-arrow-down"></span>
                <span class="label-action-column-grid">{{ 'select'|trans }} </span>
            </button>
        </div>
    </div>
</div>
{% endblock grid_row_action %}

{% block grid_row_data %}
<div class="col-md-3">
    <dt>{{ 'cpf'|trans }}</dt>
    <dd ><div style="word-wrap: break-word;">{{ row.cpf }}</div></dd>
</div>
<div class="col-md-2">
    <dt>{{ 'username'|trans }}</dt>
    <dd ><div style="word-wrap: break-word;">{{ row.username }}</div></dd>
</div>
<div class="col-md-2">
    <dt>{{ 'name'|trans }}</dt>
    <dd ><div style="word-wrap: break-word;">{{ row.email }}</div></dd>
</div>
<div class="col-md-4">
    <dt>{{ 'name'|trans }}</dt>
    <dd ><div style="word-wrap: break-word;">{{ row.getFullName }}</div></dd>
</div>
{% endblock grid_row_data %}