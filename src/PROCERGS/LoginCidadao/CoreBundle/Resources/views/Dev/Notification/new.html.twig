{% extends 'PROCERGSLoginCidadaoCoreBundle:Dev:base.html.twig' %} {% block content %}
<div id="profile-edit" class="content clearfix">
    <h1>{{ 'Notification config'|trans }}</h1>
    <div class="form-content">
                {{ form_start(form, {'attr' : {'role' : 'form'}}) }} 
                {{ form_errors(form) }}
                <div class="row clearfix">
                    <div class="col-md-12">
						<div class="form-group">
                            {{ form_label(form.id, 'Id' | trans) }} 
                            {{ form_errors(form.id) }} 
                            {{ form_widget(form.id) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.client, 'Service' | trans) }} 
                            {{ form_errors(form.client) }} 
                            {{ form_widget(form.client) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.kind, 'Kind'| trans) }} 
                            {{ form_errors(form.kind) }} 
                            {{ form_widget(form.kind) }}
                        </div>                        
                        <div class="form-group">
                            {{ form_label(form.name, 'Name'| trans) }} 
                            {{ form_errors(form.name) }} 
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.icon, 'Default Icon' | trans) }}
                            {{ form_errors(form.icon) }}
                            {{ form_widget(form.icon) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.title, 'Default title' | trans) }}
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.shorttext, 'Default shorttext' | trans) }}
                            {{ form_errors(form.shorttext) }}
                            {{ form_widget(form.shorttext) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.mdtpl, 'Markdown template' | trans) }} 
                            {{ form_errors(form.mdtpl) }} 
                            {{ form_widget(form.mdtpl, {'attr' : {'class' :'form-control', 'rows': '3' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.mailtpl, 'Mail template' | trans) }} 
                            {{ form_errors(form.mailtpl) }} 
                            {{ form_widget(form.mailtpl, {'attr' : {'class' :'form-control', 'rows': '3' }}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.maildomain, 'Mail domain'| trans) }} 
                            {{ form_errors(form.maildomain) }} 
                            {{ form_widget(form.maildomain) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.mailsend, 'Mail send' | trans) }} 
                            {{ form_errors(form.mailsend) }} 
                            {{ form_widget(form.mailsend) }}
                        </div>
                    </div>
                </div>
                <div class="form-bar text-right">
                    <input class='btn btn-success' type="submit" value="{{ 'Send'|trans }}" />
                </div>
                {{ form_end(form) }}
            </div>
    </div>
</div>
{% endblock %}
