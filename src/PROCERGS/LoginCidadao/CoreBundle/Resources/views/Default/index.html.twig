{% extends '::base.html.twig' %}

{% block body %}

<div id="login-box">
    <h3 class="title">Login Cidadão</h3>

    <form>
        <div class="form-content">
            <p>Entre no sistema xxx usando seu Login Cidadão</p>
            <div class="form-group phw">
                <input placeholder="E-mail ou CPF" class="form-control"/>
            </div>

            <div class="form-group phw">
                <input placeholder="Senha" class="form-control"/>
                <a href="" class="forgot-password">Esqueceu sua senha?</a>
            </div>
        </div>

        <div class="buttons">
            <div class="pull-left">
                <a class="connect facebook">Entrar usando o Facebook</a>
                <a class="connect twitter">Entrar usando o Twitter</a>
            </div>
            <div class="pull-right">
                <button type="submit" class="btn btn-success">Entrar</button>
                <a href="" class="clearfix">Cadastre-se no sistema</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets 'bundles/procergslogincidadaocore/css/bootstrap.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets 'bundles/procergslogincidadaocore/css/general.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets 'bundles/procergslogincidadaocore/css/login/popup.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}