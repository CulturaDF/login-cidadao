{% extends 'PROCERGSLoginCidadaoCoreBundle::base.html.twig' %}

{% block body %}

{% if error %}
<div class="msg-popup error">
    <div class="content">
        <div class="icon">icon</div>
        <div class="info">
            <h4>Nome ou n√∫mero do Alerta!</h4>
            <p>
                {{ error|trans }}
            </p>
            <button type="button" class="btn">ok</button>
        </div>
    </div>
</div>
{% endif %}

<div class="container col-sm-offset-1 col-xs-offset-0 col-sm-10">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>{% image '@PROCERGSLoginCidadaoCoreBundle/Resources/public/images/gov_2x.png' %}
                <img src="{{ asset_url }}" alt="{%trans%}Government of Rio Grande do Sul - Promoting equality makes the difference{%endtrans%}">
                {% endimage %}
            </h1>
            <h2>{% trans %}One account. All that the Government offers.{% endtrans %}</h2>
        </div>
    </div>

    <div class="box-wrapper">
        <div class="row">
            <div class="col-xs-12 col-lg-6 col-lg-offset-3">
                <form role="form" action="{{ path("fos_user_security_check") }}" method="post" class="well well-lg">
                    {% image '@PROCERGSLoginCidadaoCoreBundle/Resources/public/images/logo_2x.png' %}
                        <img class="center-block" src="{{ asset_url }}" alt="{%trans%}Citizen's Login{%endtrans%}">
                    {% endimage %}

                        <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
                        <div class="form-group">
                            <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
                            <input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">{{ 'security.login.submit'|trans }}</button>

                        <p class="text-right"><a href="{{ path("fos_user_resetting_request") }}">{%trans%}Need help?{%endtrans%}</a></p>

                        <div class="checkbox sr-only">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>

                        <p class="text-center">{{ '%link_start%Create your account%link_end%' | trans({'%link_start%' : '<a href="'~path('fos_user_registration_register')~'">', '%link_end%' : '</a>' }) | raw }}</p>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-lg-6 col-lg-offset-3 text-center">
                    <div class="well services">
                        <p>{%trans%}One account to all of the Government's services{%endtrans%}</p>
                        {% image '@PROCERGSLoginCidadaoCoreBundle/Resources/public/images/logo_strip_2x.png' %}
                        <img src="{{ asset_url }}" alt="{%trans%}Available services{%endtrans%}">
                        {% endimage %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{ facebook_initialize({'xfbml': true, 'fbAsyncInit': 'onFbInit();'}) }}

            <div class="fbpo">{{ facebook_login_button() }}</div>

            <script type="text/javascript">

                    var authurl = '{{ path('_security_check_facebook') }}';

                    function goLogIn(){
                        window.location = authurl;
                    }

                    function onFbInit() {
                        if (typeof(FB) != 'undefined' && FB != null ) {
                            FB.Event.subscribe('auth.statusChange', function(response) {
                                setTimeout(goLogIn, 500);
                            });
                        }
                    }

            </script>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer class='footer-login font-a'>
        <div>
            <nav>
                <ul>
                    <li>{%trans%}Government of Rio Grande do Sul{%endtrans%}</li>
                    <li><a href="#">{%trans%}Privacy and Terms of Service{%endtrans%}</a></li>
                    <li><a href="#">{{ 'Help' | trans }}</a></li>
                </ul>
            </nav>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    String.prototype.repeat = function( num ) {
        return new Array( num + 1 ).join( this );
    }

    function isValidCpf(cpf)
    {
        var cleanup = new RegExp('[. -A-Za-z]', 'g');
        var checkRepeat = new RegExp('([0-9])\\1{10}', 'g');

        cpf = cpf.replace(cleanup, '');
        var digitoUm = 0;
        var digitoDois = 0;

        if (cpf.length !== 11 || checkRepeat.test(cpf)) {
            return false;
        }

        for (var i = 0, x = 10; i <= 8; i++, x--) {
            digitoUm += cpf[i] * x;
        }
        for (var i = 0, x = 11; i <= 9; i++, x--) {
            var iStr = i.toString();
            if (iStr.repeat(11) === cpf) {
                return false;
            }
            digitoDois += cpf[i] * x;
        }

        var calculoUm = ((digitoUm % 11) < 2) ? 0 : 11 - (digitoUm % 11);
        var calculoDois = ((digitoDois % 11) < 2) ? 0 : 11 - (digitoDois % 11);
        if (calculoUm.toString() !== cpf[9] || calculoDois.toString() !== cpf[10]) {
            return false;
        }
        return true;
    }

    function formatCPF(element, cpf)
    {
        if ($.isNumeric(cpf) && cpf.length === 11) {
            var cpfRegex = new RegExp('([0-9]{3})([0-9]{3})([0-9]{3})([0-9]{2})', 'gi');
            cpf = cpf.replace(cpfRegex, '$1.$2.$3-$4');
            element.val(cpf).data('masked', true);
        }
    }

    $(document).ready(function(){
        $("#username").on('keyup', function(e) {
            var c= String.fromCharCode(e.which);
            var isWordcharacter = c.match(/\w/);

            var val = $(this).val().trim();
            var masked = $(this).data('masked');
            var cpf = val;
            var cleanup = new RegExp('[. \\-]', 'gi');
            cpf = cpf.replace(cleanup, '');


            if (!isWordcharacter && e.keyCode !== 0) {
                formatCPF($(this), cpf);
                return;
            }

            if ($.isNumeric(cpf)) {
                if (cpf.length > 11) {
                    cpf = cpf.substr(0,11);
                }
                formatCPF($(this), cpf);
            } else {
                if (masked === true) {
                    val = val.replace(/([0-9]{3})[.]([0-9]{3})[.]([0-9]{3})-([0-9]{2})/, '$1$2$3$4');
                    $(this).val(val);
                }
            }

            return false;
        });
    });
</script>
{% endblock %}

