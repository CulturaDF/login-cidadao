{% extends "PROCERGSLoginCidadaoCoreBundle:Notification:base.html.twig" %}
{% block content %}
<div id="inbox-config" class="content app-admin clearfix">
	<div class="panel-group" id="accordion">
	    {% for row in resultset %}
	    <div class="panel panel-default">
	        <input type="hidden" class="row-data" value="{{ row|json_encode }}" />
	        <div class="panel-heading">
	            <h4 class="panel-title">
	                <a data-toggle="collapse" data-parent="#accordion" href="{{ '#collapse' ~ row.id  }}"><span class="caret"></span> {{ row.name }}</a>
	            </h4>
	        </div>
	        <div id="{{ 'collapse' ~ row.id  }}" class="panel-collapse collapse">
            	{% set form = forms[loop.index-1] %}
            	{% set cnc_id = row.id %}
            	{{ include("PROCERGSLoginCidadaoCoreBundle:Notification:configChange.html.twig") }}
	        </div>
	    </div>
	    {% endfor %}
	</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function() {
	$(document).on('change', '#inbox-config form select',  function() {
		$(this).parents().find('form').first().submit()
	});
});
</script>
{% endblock %}