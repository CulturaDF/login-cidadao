{% extends "PROCERGSLoginCidadaoCoreBundle:Notification:base.html.twig" %}
{% block content %}
<div id="app-detail" class="content app-admin clearfix">
    <div id="dev-service-grid" class="common-grid-msg">    
        {% if resultset|length > 0 %}
            {% if title is not defined or title == '' %}
                <div class="common-grid-results">
                    <div class="row header">
                        <div class="col-md-1">{{ 'actions'|trans }}</div>
                        <div class="col-md-9">{{ 'title'|trans }}</div>
                        <div class="col-md-1">{{ 'total'|trans }}</div>
                        <div class="col-md-1">{{ 'readed'|trans }}</div>
                    </div>
                    {% for row in resultset %}
                    <div class="row common-grid-result">
                        <input type="hidden" class="row-data" value="{{ row|json_encode }}"/>
                        <div class="col-md-1">
                            <a class="center-block text-center glyphicon glyphicon-search edit-grid" title="{{ 'Show'|trans }}" href="{{ path('lc_not_inbox', {id: id, title: row.title}) }}"></a>
                        </div>
                        <div class="col-md-9">
                            <dt>{{ 'title'|trans }}</dt>
                            <dd>{{ row.title }}</dd>
                        </div>
                        <div class="col-md-1">
                            <dt>{{ 'total'|trans }}</dt>
                            <dd>{{ row.total }}</dd>
                        </div>
                        <div class="col-md-1">
                            <dt>{{ 'readed'|trans }}</dt>
                            <dd>{{ row.readed }}</dd>
                        </div>            
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="common-grid-results">
                    <div class="row header">
                        <div class="col-md-1">{{ 'actions'|trans }}</div>
                        <div class="col-md-5">{{ 'shorttext'|trans }}</div>
                        <div class="col-md-5">{{ 'createdat'|trans }}</div>
                        <div class="col-md-1">{{ 'isread'|trans }}</div>
                    </div>
                    {% for row in resultset %}
                    <div class="row common-grid-result">
                        <input type="hidden" class="row-data" value="{{ row|json_encode }}"/>
                        <div class="col-md-1">
                            <a class="center-block text-center glyphicon glyphicon-search edit-grid" title="{{ 'Show'|trans }}" href="{{ row.id }}"></a>
                        </div>
                        <div class="col-md-5">
                            <dt>{{ 'shorttext'|trans }}</dt>
                            <dd>{{ row.shorttext }}</dd>
                        </div>
                        <div class="col-md-5">
                            <dt>{{ 'createdat'|trans }}</dt>
                            <dd>{{ row.createdat }}</dd>
                        </div>
                        <div class="col-md-1">
                            <dt>{{ 'isread'|trans }}</dt>
                            <dd>{{ row.isread }}</dd>
                        </div>            
                    </div>
                    {% endfor %}
                </div>
            {% endif %}
        {% else %}
            <div>{{ 'grid.search.noresult'|trans }}</div>
        {% endif %}
    </div>
</div>
{% endblock %} 