{% extends 'PROCERGSLoginCidadaoCoreBundle::base.html.twig' %}

{% block header %}
{% include "PROCERGSLoginCidadaoCoreBundle::navbar.html.twig" %}
{% endblock %}

{% block body %}
    <div class="row">
    {% block sidebar %}
        <div class="col-md-3 col-sm-3">
            <ul class="settings-nav nav nav-pills nav-stacked">
                <li class="profile glyph {% if app.request.attributes.get('_route') == 'fos_user_profile_edit' %}active{% endif %}">
                    <a href="{{ path('fos_user_profile_edit') }}">
                        <span>
                            {% trans %}Profile{% endtrans %}
                            <i class="glyphicon glyphicon-user pull-right"></i>
                        </span>
                    </a>
                </li>
                <li class="services glyph {% if app.request.attributes.get('_route') == 'lc_apps' %}active{% endif %}">
                    <a href="{{ path('lc_apps') }}">
                        <span>
                            {% trans %}Services{% endtrans %}
                            <i class="glyphicon glyphicon-th pull-right"></i>
                        </span></a>
                </li>
                <li class="notifications glyph {% if app.request.attributes.get('_route') == 'lc_notifications_list' %}active{% endif %}">
                    <a href="{{ path('lc_notifications_list') }}">
                        <span>
                            {% trans %}Notifications{% endtrans %}
                            <i class="glyphicon glyphicon-bell pull-right"></i>
                        </span>
                    </a>
                </li>
                <li class="username">
                    <a href="">
                        <span>{% trans %}Change Username{% endtrans %}</span>
                        <i class="bg"></i>
                    </a>
                </li>
                <li class="password {% if app.request.attributes.get('_route') == 'fos_user_change_password' %}active{% endif %}"   >
                    <a href="{{ path('fos_user_change_password')}}">
                        <span>{% trans %}Change password{% endtrans %}</span>
                        <i class="bg"></i>
                    </a>
                </li>
                <li class="settings glyph">
                    <a href="">
                        <span>
                            {% trans %}Settings{% endtrans %}
                            <i class="glyphicon glyphicon-cog pull-right"></i>
                        </span>
                    </a>
                </li>
            </ul>

            <div class="progress-box">
                <h5 style="padding: 10px 10px 0 10px;">{% trans %}Situation{% endtrans %}</h5>
                <div class="progress">
                  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                    <span>50%</span>
                  </div>
                </div>
            </div>
        </div>
    {% endblock sidebar %}

    <div class="settings-content col-md-9 col-sm-9">
    {% block content %}{% endblock content %}
    </div>

    </div>

{% endblock body %}

{% block footer %}
    <footer class="container">
        <div class="row">
            <div class="col-sm-4">
                <h3>Informações Úteis</h3>
                <ul>
                    <li><a href="">Licença de Conteúdo</a></li>
                    <li><a href="">Termos de Uso</a></li>
                    <li><a href="">Política de Privacidade</a></li>
                    <li><a href="">Repositório Github</a></li>
                    <li><a href="">Humans.txt</a></li>
                </ul>
            </div>

            <div class="col-sm-4">
                <h3>Precisa de Ajuda?</h3>
                <ul>
                    <li><a href="">Contato</a></li>
                    <li><a href="">Suporte e Informações</a></li>
                </ul>

                <h3>Fique por Dentro</h3>
            </div>

            <div class="col-sm-4">
                <h3>Sobre o Governo</h3>
            </div>
        </div>
        <div class="row copyright">
            <span>Copyright</span>
        </div>
    </footer>
{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/procergslogincidadaocore/css/*.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% stylesheets 'bundles/procergslogincidadaocore/css/logged/*.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% stylesheets 'bundles/procergslogincidadaocore/css/ie/ie7.css' filter='cssrewrite' %}
        <!--[if IE 7]>
          <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
    {% endstylesheets %}
    {% stylesheets 'bundles/procergslogincidadaocore/css/ie/ie8.css' filter='cssrewrite' %}
        <!--[if IE 8]>
          <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
    {% endstylesheets %}
    {% stylesheets 'bundles/procergslogincidadaocore/css/ie/ie9.css' filter='cssrewrite' %}
        <!--[if IE 9]>
          <link rel="stylesheet" href="{{ asset_url }}" />
        <![endif]-->
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
            '@PROCERGSLoginCidadaoCoreBundle/Resources/public/js/jquery.js'
            '@PROCERGSLoginCidadaoCoreBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% javascripts
            '@PROCERGSLoginCidadaoCoreBundle/Resources/public/js/ie/ie.js'
    %}
        <!--[if lt IE 9]>
          <script type="text/javascript" src="{{ asset_url }}"></script>
        <![endif]-->
    {% endjavascripts %}
{% endblock %}
