<div class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header {% if app.user == null %}pull-left{% endif %}">
            {% if app.user != null %}
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">{% trans %}Toggle Navigation{% endtrans %}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% endif %}

            {% image '@PROCERGSLoginCidadaoCoreBundle/Resources/public/images/brasaoRS.png' %}
            <img src="{{ asset_url }}" alt="{% trans %}Available services{% endtrans %}" class="navbar-brand">
            {% endimage %}
        </div>

        {% if app.user == null %}
        <div class="pull-right">
            <a data-href="{{ path("fos_user_security_login") }}" class="btn btn-login btn-success navbar-btn">{{ 'Log in' | trans }}</a>
        </div>
        {% else %}
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {# Apps list #}
                <li class="dropdown icons">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-th">
                            <span class="icon-label">{% trans %}Applications{% endtrans %}</span>
                        </i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="">App1</a></li>
                    </ul>
                </li>

                {# Notifications #}
                <li class="dropdown icons">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-bell">
                            {% if notifications_helper.getUnread is not empty %}
                            <span class="label label-danger">{{ notifications_helper.getUnread | length }}</span>
                            {% endif %}
                            <span class="icon-label">{% trans %}Notifications{% endtrans %}</span>
                        </i>
                    </a>
                    <ul class="dropdown-menu">
                        {% if notifications_helper.getUnread is not empty %}
                            {% for notification in notifications_helper.getUnread %}

                            <li>
                                <a href="">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            {{ notification.title }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            {{ notification.shortText }}
                                        </div>
                                    </div>
                                </a>
                            </li>
                            {% endfor %}
                            <li class="text-center"><a href="{{ path('lc_notifications_list') }}">{% trans %}View all notifications{% endtrans %}</a></li>
                        {% else %}
                        <li>{% trans %}You don't have any unread notification.{% endtrans %}</li>
                        {% endif %}
                    </ul>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ path('fos_user_profile_edit') }}" class="profile-card">
                        {% image '@PROCERGSLoginCidadaoCoreBundle/Resources/public/images/userav.png' %}
                        <img src="{{ asset_url }}" alt="" class="profile-picture">
                        {% endimage %}
                        <span class="profile-username">{{ app.user.username }}</span>
                    </a>
                </li>
                <li class="icons">
                    <a href="{{ path('fos_user_security_logout')}}">
                        <i class="glyphicon glyphicon-log-out">
                            <span class="icon-label">{% trans from "FOSUserBundle" %}layout.logout{% endtrans %}</span>
                        </i>
                    </a>
                </li>
            </ul>
        </div>
        {% endif %}
    </div>
</div>



<nav class="navbar navbar-default navbar-inverse" role="navigation" style="display:none;">
  <div class="container">

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
            <li>
                <a href="#" class="icon apps"></a>
            </li>
            <li class="dropdown">
                <a href="#" class="icon notifications dropdown-toggle" data-toggle="dropdown"></a>
                <ul class="dropdown-menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                    <li class="divider"></li>
                    <li><a href="#">One more separated link</a></li>
                </ul>
            </li>
        </ul>

      <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="#" class="icon user">
                {% image '@PROCERGSLoginCidadaoCoreBundle/Resources/public/images/userav.png' %}
                <img src="{{ asset_url }}" alt="" class="img" width="33" height="33">
                {% endimage %}
                <span class="name">Pessoa da Silva</span>
            </a>
        </li>
        <li><a href="{{ path('fos_user_security_logout')}}" class="icon logout"></a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>