<h3>Autorizar aplicação</h3>
<form action="{{ path('fos_oauth_server_authorize') }}" method="POST" class="fos_oauth_server_authorize" {{ form_enctype(form) }}>

    <div class="img">
        <img src="{% include 'PROCERGSLoginCidadaoCoreBundle:Person:currentUserPicture.html.twig' %}" width="90">
        <i class="glyphicon glyphicon-chevron-right"></i>
        <img src="http://placehold.it/90x90" alt="" class="img-rounded">
    </div>

    <p class="msg">{% trans with {'%client_name%': client.name} %}The <strong>%client_name%</strong> app wants to access the following information about you:{% endtrans %}</p>

    <ul class="permissions">
    {% for scope in form.vars.value.scope|split(' ') %}
        <li>{{ ('scope.' ~ scope) | trans }}</li>
    {% endfor %}
    </ul>

    <div class="buttons text-center">
        <input type="submit" name="accepted" value="{{ 'authorize.accept'|trans({}, 'FOSOAuthServerBundle') }}" class="btn btn-success" />
        <input type="submit" name="rejected" value="{{ 'authorize.reject'|trans({}, 'FOSOAuthServerBundle') }}" class="btn btn-danger" />
    </div>

    {{ form_row(form.client_id) }}
    {{ form_row(form.response_type) }}
    {{ form_row(form.redirect_uri) }}
    {{ form_row(form.state) }}
    {{ form_row(form.scope) }}
    {{ form_rest(form) }}
</form>