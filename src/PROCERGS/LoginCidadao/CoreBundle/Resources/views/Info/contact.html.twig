{% extends 'PROCERGSLoginCidadaoCoreBundle::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
<div class="row">
  <div class="general-content col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 clearfix">
    {{ form_start(form, {'attr' : {'role' : 'form'}}) }}
      <div class="form-content">
          <h1>{{ 'contact.title'|trans({}, 'messages') }}</h1>
          <div class="form-group">
            {% if messages %}
              <div class="input-error alert-danger">
                  {{ messages|trans }}
              </div>
            {% endif %}
          </div>
          <div class="form-group">
              {{ form_label(form.firstName, null, {'label_attr' : {'class': 'sr-only'}}) }}
              {{ form_errors(form.firstName) }}
              {{ form_widget(form.firstName, {'attr' : {'placeholder' : 'form.firstName'|trans }}) }}
          </div>
          <div class="form-group">
              {{ form_label(form.email, null , {'label_attr' : {'class': 'sr-only'}}) }}
              {{ form_errors(form.email) }}
              {{ form_widget(form.email, {'attr' : {'placeholder' : 'form.email'|trans }}) }}
          </div>
          <div class="form-group">
              {{ form_label(form.message, null , {'label_attr' : {'class': 'sr-only'}}) }}
              {{ form_errors(form.message) }}
              {{ form_widget(form.message, {'attr' : {'placeholder' : 'form.message'|trans, 'class' :'form-control', 'rows': '3' }}) }}
          </div>
          <div class="form-group">
      {{ include("PROCERGSLoginCidadaoCoreBundle::common.recaptcha.html.twig") }}
      {% form_theme form 'EWZRecaptchaBundle:Form:ewz_recaptcha_widget.html.twig' %}
      {{ form_widget(form.recaptcha, { 'attr': {'options' : {'theme' : 'custom'}}}) }}
            <div class="input-error alert-danger">{{ form_errors(form.recaptcha) }}</div>
          </div>
          <button type="submit" class="btn btn-success pull-right">{{ 'form.submit'|trans }}</button>
      </div>
     {{ form_end(form) }}
  </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
    {% stylesheets 'bundles/procergslogincidadaocore/css/home/*.css' filter='cssrewrite' filter='?uglifycss' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}