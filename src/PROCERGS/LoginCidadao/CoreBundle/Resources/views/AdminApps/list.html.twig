{% extends "PROCERGSLoginCidadaoCoreBundle::base.loggedIn.html.twig" %} {% block content %}
<div id="app-detail" class="content app-admin clearfix">
    <h5>{{ 'grid.admin.apps.title'|trans }}</h5>
    <p>
        <a href="{{ path('lc_admin_app_new') }}" class="btn btn-primary btn-sm">{{ 'grid.admin.apps.new'|trans }} </a>
    </p>
    {% if clients|length > 0 %}
    <div class="content">

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                {# <th>{{ 'form.checkbox'|trans }}</th> #}
                <th>{{ 'form.show'|trans }}</th>
                <th>{{ 'form.edit'|trans }}</th>
                <th>{{ 'form.name'|trans }}</th>
                <th>{{ 'form.siteurl'|trans }}</th>
              </tr>
            </thead>
            <tbody>
              {% for client in clients %}
              <tr>
                {# <td>
                    <div class="checkbox">
                      <label>
                        <input type="checkbox" /> {{ 'form.checkbox'|trans }}</td>
                      </label>
                    </div>
                </td> #}
                <td>
                    <a href="{{ path('lc_admin_app_show', {'id': client.id}) }}">
                        <span>
                          <i class="glyphicon glyphicon-search"></i>{{ 'grid.admin.apps.show'|trans }}
                        </span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('lc_admin_app_edit', {'id': client.id}) }}">
                        <span>
                          <i class="glyphicon glyphicon-pencil"></i>{{ 'grid.admin.apps.edit'|trans }}
                        </span>
                    </a>
                </td>
                <td>{{ client.name | trans }}</td>
                <td>{{ client.siteurl }}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

    </div>
    {% else %}
    <div>{{ 'grid.admin.apps.noresult'|trans }}</div>
    {% endif %}

</div>

{% endblock %} {% block javascripts %} {{ parent() }}
<script type="text/javascript">
</script>
{% endblock %}
