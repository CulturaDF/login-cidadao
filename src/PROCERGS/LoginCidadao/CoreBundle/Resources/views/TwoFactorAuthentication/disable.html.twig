{{ form_start(form, {'action': path('2fa_disable'), 'attr': {'role':'form', 'class':'lc_2fa_disable'}}) }}
<div class="modal fade" id="modal2FADisable" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">{{ 'Confirm Two-Factor Authentication Deactivation' | trans }}</h4>
            </div>
            <div class="modal-body">
                <p>{% trans %}By disabling Two-Factor Authentication you are reducing your account's security.{% endtrans %}</p>

                {{ form_row(form.current_password) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Keep it activated' | trans }}</button>
                {{ form_widget(form.disable) }}
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
{{ form_end(form) }}
