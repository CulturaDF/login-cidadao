{% extends 'PROCERGSLoginCidadaoUIBundle::base.html.twig' %}

{% block header %}
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    {% image '@PROCERGSLoginCidadaoUIBundle/Resources/public/images/logo_gov.png' %}
    <img src="{{ asset_url }}" alt="{%trans%}Government of Rio Grande do Sul - Promoting equality makes the difference{%endtrans%}" height="65">
    {% endimage %}

    <a class="btn btn-default btn-green" href="#" role="button">Login</a>
  </div><!-- /.container-fluid -->
</nav>
{% endblock %}

{% block footer %}
    <footer>
        <div>
            <nav>
                <ul>
                    <li><a href="#">{%trans%}Government of Rio Grande do Sul{%endtrans%}</a></li>
                    <li><a href="#">{%trans%}Privacy and Terms of Service{%endtrans%}</a></li>
                    <li><a href="#">{{ 'Help' | trans }}</a></li>
                </ul>
            </nav>
        </div>
    </footer>
{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/procergslogincidadaoui/css/*.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
            '@PROCERGSLoginCidadaoUIBundle/Resources/public/js/jquery.js'
            '@PROCERGSLoginCidadaoUIBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
