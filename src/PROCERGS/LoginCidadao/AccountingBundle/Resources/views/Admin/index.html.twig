{% extends "LoginCidadaoCoreBundle:Admin:base.html.twig" %}

{% block content %}
    <div class="content">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">{{ 'admin.accounting.summary.title' | trans }}</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover">
                            <caption>{{ 'admin.accounting.summary.caption' | trans }}</caption>
                            <thead>
                                <tr>
                                    <th>{{ 'admin.accounting.summary.client.name' | trans }}</th>
                                    <th>{{ 'admin.accounting.summary.client.procergs_initials' | trans }}</th>
                                    <th>{{ 'admin.accounting.summary.client.access_tokens' | trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in data %}
                                    <tr>
                                        <td>
                                            <a class="text-info " href="{{ path('lc_admin_accounting_edit_link', {'clientId': item.client.client_id}) }}">
                                                {{ item.client.name }}
                                            </a>
                                        </td>
                                        <td>{{ item.procergs | join(', ') }}</td>
                                        <td>{{ item.access_tokens }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
