{% extends "PROCERGSLoginCidadaoCoreBundle::base.loggedIn.html.twig" %}

{% block content %}
<div class="content broadcast">

    <div class="panel panel-default">
      <div class="panel-heading"><h2 class="panel-title">{{ 'Services' | trans }}</h2></div>
      <div class="panel-body">
        <div class="list-group">
          {% for app in apps %}
            <a href="{{ path('lc_notification_broadcast_new', {'clientId': app.id}) }}" class="list-group-item">
                {{ app.name }}
            </a>
        {% endfor %}
        </div>
      </div>
    </div>
</div>
{% endblock content %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@PROCERGSLoginCidadaoNotificationBundle/Resources/public/css/broadcast.css' filter='cssrewrite' filter='?uglifycss' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock stylesheets %}