{% extends "PROCERGSLoginCidadaoCoreBundle:Dev:base.html.twig" %}

{% block content %}
<div class="content broadcast">

    <div class="panel panel-default">
      <div class="panel-heading"><h2 class="panel-title">{{ 'Broadcast' | trans }} {{ broadcast.id }}</h2></div>
      <div class="panel-body">        
          <p><strong>{{ 'Title' | trans }}</strong> : {{ broadcast.title }}</p>
          <p><strong>{{ 'ShortText' | trans }}</strong> : {{ broadcast.shortText }}</p>
          <p><strong>{{ 'Category' | trans }}</strong> : {{ broadcast.category.name }}</p>
          
          <p><strong>{{ 'Html' | trans }}</strong> </p>          
          <div class="well" id="notification-preview">{{  broadcast.htmlTemplate | raw }}</div>
          
          <p><strong>{{ 'Receivers' | trans }}</strong></p>
          <ul class="list-group">
          {% for receiver in broadcast.receivers %}                        
            <li class="list-group-item">{{ receiver.firstName ? receiver.firstName : receiver.userName }}</li>                      
          {% endfor %}
          </ul>
      </div>
    </div>
    <a href="{{ path('lc_dev_broadcasts') }}" class="btn btn-link" role="button">{{ 'Back to broadcasts list' | trans }}</a>
</div>
{% endblock content %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@PROCERGSLoginCidadaoNotificationBundle/Resources/public/css/broadcast.css' filter='cssrewrite' filter='?uglifycss' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock stylesheets %}