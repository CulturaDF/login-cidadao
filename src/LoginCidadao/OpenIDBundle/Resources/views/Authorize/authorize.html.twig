{% extends "PROCERGSLoginCidadaoCoreBundle::base.html.twig" %}

{% block body %}

{% block notificationExtreme %}
{{ include("PROCERGSLoginCidadaoCoreBundle::notification_extreme.html.twig", { columns: 'col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3' } ) }}
{% endblock %}

<div class="row">
    <div class="general-content col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 clearfix">
      <div class="well" id="oauth-box">
        {{ include("LoginCidadaoOpenIDBundle:Authorize:form.html.twig") }}
      </div>
    </div>
</div>

{% endblock body %}

{#

<h1>Authorize</h1>

{% if scopes|length > 0 %}
<p>{{ app.request.get('client_id') }} would like to access the following data:</p>

<ul>
    {% for scope in scopes %}
    <li>{{ scope }}</li>
    {% endfor %}
</ul>
{% else %}
<p>{{ app.request.get('client_id') }} would like to access.</p>
{% endif %}

<form action="?{{ qs|url_encode }}" method="post">
    <input type="hidden" name="authorize" value="1" />
    <input type="submit" value="Auhtorize!" />
</form>
#}
